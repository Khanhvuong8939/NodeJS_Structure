<% include partials/header %>


<div class="container center">

    <form action="/articles/edit/<%=article._id%>" method="post">
        <div class="row col s6">
            <h1>Add Article</h1>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <label for="title">Name</label>
                <input type="text" name="title" value="<%= article.title %>">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <label for="author">Author</label>
                <input type="text" name="author" value="<%= article.author %>">
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <label for="body">Body</label>
                <input type="text" name="body" value="<%= article.body %>">
            </div>
        </div>
        <div class="row">
            <button class="btn waves-effect waves-light btn-large col s3" type="submit">Submit</button>
            <a class="btn waves-effect waves-light btn-large col s3" href="/">Back</a>
        </div>

    </form>
</div>


<% include partials/footer %>